<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
    android:layout_width="match_parent" android:orientation="horizontal">
    <fragment class = "pdm.isel.pt.tmdbapp.View.MovieLinksFragments"
        android:id="@+id/links" android:layout_weight="1"
        android:layout_width="0px" android:layout_height="match_parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="next"
        android:textColor="#FFFFBB33"
        android:id="@+id/buttonNext"
        android:visibility="invisible"
        android:layout_gravity="right|bottom"
        android:shadowColor="@android:color/holo_red_dark"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="prev"
        android:textColor="#FFFFBB33"
        android:id="@+id/buttonPrev"
        android:visibility="invisible"
        android:layout_gravity="right|top"
        android:shadowColor="@android:color/holo_red_dark"
        style="?android:attr/borderlessButtonStyle" />

    />
    <FrameLayout android:id="@+id/details" android:layout_weight="1"
        android:layout_width="0px" android:layout_height="match_parent" >

    </FrameLayout>
</LinearLayout>